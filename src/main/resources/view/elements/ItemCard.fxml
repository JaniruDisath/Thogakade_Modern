                        <Insets bottom="5.0" left="8.0" right="8.0" top="5.0" />
                     </HBox.margin>
                  </Button>
                  <TextField fx:id="numberOfUnitsTextField" editable="false" prefHeight="25.0" prefWidth="76.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Button fx:id="increaseButton" mnemonicParsing="false" onAction="#onIncrease" prefHeight="27.0" prefWidth="27.0" text="+">
                     <HBox.margin>
                        <Insets bottom="5.0" left="8.0" right="8.0" top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Label fx:id="priceLabel" prefHeight="30.0" prefWidth="165.0" text="Label">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Button fx:id="addToCartButton" mnemonicParsing="false" onAction="#onAddToCart" prefHeight="25.0" prefWidth="196.0" text="ADD TO CART">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
