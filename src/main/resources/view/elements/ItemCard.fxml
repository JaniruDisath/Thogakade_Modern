      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="350.0" prefWidth="190.0">
         <children>
            <ImageView fx:id="itemImage" fitHeight="150.0" fitWidth="190.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
               </VBox.margin></ImageView>
            <Separator prefWidth="200.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin></Separator>
            <Label fx:id="titleLabel" prefHeight="16.0" prefWidth="200.0" text="Label" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="11.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
               </VBox.margin>
            </Label>
            <Separator prefWidth="200.0">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" />
               </VBox.margin></Separator>
            <HBox prefHeight="7.0" prefWidth="190.0">
               <children>
                  <Label prefHeight="12.0" prefWidth="65.0" text="Number Of Units">
                     <font>
                        <Font size="8.0" />
                     </font>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="5.0" top="10.0" />
                     </HBox.margin>
                  </Label>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="37.0" prefWidth="190.0">
               <children>
                  <Button fx:id="reduceButton" mnemonicParsing="false" onAction="#onDecrease" prefHeight="27.0" prefWidth="27.0" text="-">
